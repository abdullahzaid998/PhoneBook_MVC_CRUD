@model PhoneBookWeb.Models.PhoneBook

@{
    ViewBag.Title = "Edit";
}

<form asp-page-handler="Submit" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend style="margin-top:15px">Edit <strong>@Html.DisplayFor(m => m.Name)</strong>'s contact info </legend>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label for="exampleInputName1" class="form-label mt-4">Name</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="exampleInputPhoneNumber1" class="form-label mt-4">Phone Number</label>
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="exampleInputAddress1" class="form-label mt-4">Address</label>
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" style="margin-top:20px" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
</form>
<div>
    <button type="button" class="btn btn-link" style="margin:5px" onclick="location.href='@Url.Action("Index","PhoneBooks")'">Back to List</button>
</div>
